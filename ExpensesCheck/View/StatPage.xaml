<Page x:Class="ExpensesCheck.View.StatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpensesCheck.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" HorizontalAlignment="Left" Margin="20,0,0,0">
            <TextBlock>Статистика:</TextBlock>
        </Viewbox>
        <Frame Name="ChartsFrame" Grid.Row="1"></Frame>
        <Viewbox Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Button Click="PointShapeLinePageOpen" Margin="10, 0">
                    <Image></Image>
                </Button>
                <Button Click="StackedColumnPageOpen" Margin="10, 0">
                    <Image></Image>
                </Button>
                <Button Margin="10, 0">
                    <Image></Image>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
